  }
  .gallery-item:hover .gallery-overlay {
    opacity: 1 !important;
  }
  .parallax-section {
    background-attachment: fixed;
  }
  @media (max-width: 768px) {
    .parallax-section {
      background-attachment: scroll;
    }
    .hero-section {
