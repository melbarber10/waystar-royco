<%- include('./partials/header') %>

<div class="row">
    <%- include('./partials/sidebar') %>
    <div class="col-md-9">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card">
                        <div class="card-header">
                            <h2>Edit Profile</h2>
                        </div>
                            <form action="/dh/profile" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" name="name" value="<%= dh.name %>" required>
                                </div>
                                
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" value="<%= dh.email %>" disabled>
                                </div>
                                
                                <div class="form-group">
                                    <label>Phone Number</label>
                                    <input type="tel" class="form-control" name="phoneNumber" value="<%= dh.phoneNumber || '' %>">
                                </div>
                                
                                <div class="form-group">
                                    <label>Profile Picture</label>
                                    <input type="file" class="form-control-file" name="image" accept="image/*">
                                    <% if (dh.image) { %>
                                        <div class="mt-2">
                                            <img src="<%= dh.image %>" alt="Current profile picture" class="img-thumbnail" style="max-width: 200px;">
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Update Profile</button>
                                    <a href="/dh/profile" class="btn btn-secondary">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>