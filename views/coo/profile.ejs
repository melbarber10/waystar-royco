<%- include('./partials/header') %>

<div class="row">
    <%- include('./partials/sidebar') %>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3><i class="bi bi-person-circle"></i> COO Profile</h3>
                    </div>
                    <div class="card-body">
                        <!-- Profile Picture Section -->
                        <div class="text-center mb-4">
                            <% if (user.image) { %>
                                <img src="<%= user.image %>" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                            <% } else { %>
                                <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                                    <i class="bi bi-person" style="font-size: 4rem; color: white;"></i>
                                </div>
                            <% } %>
                            <h4 class="mt-3"><%= user.name %></h4>
                            <p class="text-muted">Chief Operating Officer</p>
                        </div>

                        <!-- Profile Information Form -->
                        <form action="/coo/profile/update" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">
                                            <i class="bi bi-person"></i> Full Name
                                        </label>
                                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="phoneNumber" class="form-label">
                                            <i class="bi bi-telephone"></i> Phone Number
                                        </label>
                                        <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= user.phoneNumber || '' %>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="department" class="form-label">
                                            <i class="bi bi-building"></i> Department
                                        </label>
                                        <input type="text" class="form-control" id="department" name="department" value="<%= user.department || 'Operations' %>" readonly>
                                        <small class="form-text text-muted">COO is automatically assigned to Operations department</small>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="image" class="form-label">
                                    <i class="bi bi-camera"></i> Profile Picture
                                </label>
                                <input type="file" class="form-control" id="image" name="image" accept="image/*">
                                <small class="form-text text-muted">Upload a new profile picture (JPG, PNG, GIF). Max size: 5MB</small>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Update Profile
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Profile Statistics Sidebar -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-graph-up"></i> Profile Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Member Since</small>
                            <p class="mb-0"><%= new Date(user.createdAt).toLocaleDateString() %></p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Role</small>
                            <p class="mb-0"><span class="badge bg-primary">Chief Operating Officer</span></p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Status</small>
                            <p class="mb-0"><span class="badge bg-success">Active</span></p>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5><i class="bi bi-lightning"></i> Quick Actions</h5>
                    </div>
                    <div class="card-body">
                            <a href="/coo/leave/pending" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-clock"></i> Review Pending Leaves
                            </a>
                            <a href="/coo/employees" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-people"></i> View Employees
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %> 