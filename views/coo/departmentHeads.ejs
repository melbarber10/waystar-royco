<%- include('partials/header') %>

<div class="row">
    <%- include('partials/sidebar') %>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Department Heads</h3>
                <a href="/coo/dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </div>
            <div class="card-body">
                <% if (departmentHeads.length === 0) { %>
                    <div class="alert alert-info">No department heads found.</div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Department</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% departmentHeads.forEach(dh => { %>
                                    <tr>
                                        <td><%= dh.name %></td>
                                        <td><%= dh.email %></td>
                                        <td><%= dh.department %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 